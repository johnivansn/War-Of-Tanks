{
  // ============================================
  // CONFIGURACIÓN JAVA
  // ============================================
  "java.project.outputPath": "bin",
  "java.project.sourcePaths": ["src"],
  "java.project.referencedLibraries": ["libs/**/*.jar"],

  // Análisis de código
  "java.compile.nullAnalysis.mode": "automatic",
  "java.errors.incompleteClasspath.severity": "warning",

  // Formato de código
  "java.format.settings.url": ".vscode/java-formatter.xml",
  "java.format.enabled": true,
  "java.format.comments.enabled": true,

  // Rendimiento (optimizado para 8GB RAM)
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m",
  "java.server.launchMode": "Standard",

  // Autocompletado y refactorización
  "java.completion.enabled": true,
  "java.completion.guessMethodArguments": "auto",
  "java.completion.favoriteStaticMembers": [
    "java.util.Objects.requireNonNull",
    "java.util.Objects.requireNonNullElse",
    "org.junit.jupiter.api.Assertions.*",
    "org.mockito.Mockito.*"
  ],
  "java.codeGeneration.hashCodeEquals.useJava7Objects": true,
  "java.codeGeneration.useBlocks": true,

  // ============================================
  // CONFIGURACIÓN ESPECÍFICA POR LENGUAJE
  // ============================================
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.insertSpaces": false,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.suggestSelection": "first",
    "editor.semanticHighlighting.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true
  },

  // ============================================
  // EDITOR GENERAL
  // ============================================
  "editor.fontSize": 13,
  "editor.fontFamily": "'Cascadia Code', 'JetBrains Mono', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.4,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.renderWhitespace": "selection",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "off",

  // ============================================
  // TERMINAL
  // ============================================
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Cascadia Code', 'JetBrains Mono', Consolas",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.gpuAcceleration": "on",

  // ============================================
  // EXPLORADOR DE ARCHIVOS
  // ============================================
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/*.class": false
  },

  // ============================================
  // GIT
  // ============================================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.hovers.currentLine.over": "line",

  // ============================================
  // TEMA Y APARIENCIA
  // ============================================
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "welcomePage",
  "workbench.sideBar.location": "left",
  "workbench.activityBar.location": "default",
  "window.zoomLevel": 0,
  "breadcrumbs.enabled": true,

  // ============================================
  // ERROR LENS (Errores en línea)
  // ============================================
  "errorLens.enabled": true,
  "errorLens.fontStyleItalic": true,
  "errorLens.fontSize": "12px",

  // ============================================
  // RENDIMIENTO GENERAL
  // ============================================
  "extensions.ignoreRecommendations": false,
  "redhat.telemetry.enabled": false
}
